{
    "compilerOptions": {
        "target": "esnext",
        "baseUrl": "./",
        "jsx": "react",
        "paths": {
            "@mobx": ["./src/mobx/"],
            "@src": ["./src/"],
            "@components": ["./src/components/"],
            "@assets": ["./src/assets/"],
            "@locales": ["./src/locales/"],
            "@utils": ["./src/utils/"],
            "@servers": ["./src/servers/"],
            "@pages": ["./src/pages/"],
            "@request": ["./src/request.js"],
            "@config": ["./src/config.js"],
            "@routeConfig": ["./src/routeConfig.jsx"],
            "@mock": ["./src/mock/"]
        }
    },
    "include": ["./src/**/*", "src/servers/.js"],
    "exclude": ["node_modules", "dist", ".history"]
}
